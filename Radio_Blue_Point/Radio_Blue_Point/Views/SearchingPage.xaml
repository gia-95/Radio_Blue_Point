<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Radio_Blue_Point.Views.SearchingPage"
             BackgroundColor="Black">


    <StackLayout>
        <Frame BackgroundColor="#363636" 
               HeightRequest="40"
               Padding="7">
            <Frame
                CornerRadius="5"
                BackgroundColor="Gray"
                Padding="0">
                <StackLayout Orientation="Horizontal">
                    <Entry BackgroundColor="Transparent" Placeholder="Search..." WidthRequest="320" />
                    <Grid Margin="7">
                        <Button BackgroundColor="Transparent" />
                        <Image Source="https://www.iconsdb.com/icons/preview/white/search-13-xxl.png" />
                    </Grid>
                </StackLayout>
            </Frame>


        </Frame>
        
    </StackLayout>
    
    
    
    
    
    
    
</ContentPage>